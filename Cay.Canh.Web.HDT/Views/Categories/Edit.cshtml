@model Cay.Canh.Web.HDT.Data.Category

@{
    ViewData["Title"] = "Chỉnh Sửa Danh Mục";
    Layout = "_LayoutShop";
}

<h1 class="text-center">Chỉnh Sửa Danh Mục</h1>

<h4 class="text-center">Thông Tin Danh Mục</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="CategoryId" />

            <!-- Tên Danh Mục -->
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label font-weight-bold"></label>
                <input asp-for="CategoryName" class="form-control @((ViewData.ModelState["CategoryName"]?.Errors.Count() > 0) ? "is-invalid" : "")" placeholder="Nhập tên danh mục" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <!-- Mô Tả -->
            <div class="form-group">
                <label asp-for="Description" class="control-label font-weight-bold"></label>
                <textarea asp-for="Description" class="form-control @((ViewData.ModelState["Description"]?.Errors.Count() > 0) ? "is-invalid" : "")" rows="4" placeholder="Mô tả chi tiết về danh mục"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <!-- Nút Lưu -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Lưu Thay Đổi</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Index" class="btn btn-secondary">Trở Lại Danh Sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
