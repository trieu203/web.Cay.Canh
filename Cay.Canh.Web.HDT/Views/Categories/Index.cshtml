@model IEnumerable<Cay.Canh.Web.HDT.Data.Category>

@{
    ViewData["Title"] = "Danh Sách Danh Mục";
    Layout = "_LayoutShop";
}

<!-- Tiêu đề trang -->
<div class="container my-5">
    <h1 class="text-center mb-4">Danh Sách Danh Mục Cây Cảnh</h1>

    <div class="d-flex justify-content-end mb-4">
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus-circle"></i> Tạo Mới
        </a>
    </div>

    <!-- Bảng danh mục -->
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                <th>@Html.DisplayNameFor(model => model.UpdatedDate)</th>
                <th class="text-center">Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.UpdatedDate)</td>
                    <td class="text-center">
                        <a href="@Url.Action("Edit", new { id = item.CategoryId })" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Chỉnh Sửa
                        </a>
                        <a href="@Url.Action("Details", new { id = item.CategoryId })" class="btn btn-info btn-sm">
                            <i class="fas fa-info-circle"></i> Chi Tiết
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.CategoryId })" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Thêm Font Awesome cho các icon -->
@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}
