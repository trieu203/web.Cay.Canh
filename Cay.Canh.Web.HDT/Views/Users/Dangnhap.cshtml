@model Cay.Canh.Web.HDT.ViewModel.LoginVM

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_Product";

}
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow" style="width: 400px;">
        <h3 class="text-center mb-4">@ViewData["Title"]</h3>
        <form asp-action="Dangnhap" method="post">
            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" id="floatingUserName" placeholder=" " />
                <label for="floatingUserName">Nhập tên đăng nhập</label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" id="floatingPassword" type="password" placeholder=" " />
                <label for="floatingPassword">Nhập mật khẩu</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .form-floating {
        position: relative;
    }

        .form-floating .form-control {
            padding: 1rem 0.75rem 0.25rem;
        }

        .form-floating label {
            position: absolute;
            top: 0.75rem;
            left: 0.75rem;
            transition: all 0.2s ease;
            pointer-events: none;
            font-size: 1rem;
            color: #6c757d;
        }

        .form-floating .form-control:focus + label,
        .form-floating .form-control:not(:placeholder-shown) + label {
            top: -1.2rem;
            font-size: 0.85rem;
            color: #495057;
        }

</style>