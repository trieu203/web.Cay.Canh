@model Cay.Canh.Web.HDT.Data.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "_LayoutShop";
}

<h2 class="text-center mt-4">Xác nhận xóa sản phẩm</h2>
<hr />

<div class="container bg-light p-4 rounded shadow-sm">
    <h4 class="mb-4">Bạn có chắc chắn muốn xóa sản phẩm này?</h4>
    <dl class="row">
        <!-- Tên sản phẩm -->
        <dt class="col-sm-3">Tên sản phẩm</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductName)</dd>

        <!-- Giá sản phẩm -->
        <dt class="col-sm-3">Giá (VND)</dt>
        <dd class="col-sm-9">@Model.Price.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</dd>

        <!-- Hình ảnh -->
        <dt class="col-sm-3">Hình ảnh</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Ảnh sản phẩm" class="img-fluid rounded" style="max-width: 200px; max-height: 200px;" />
            }
            else
            {
                <span>Không có ảnh</span>
            }
        </dd>

        <!-- Mô tả sản phẩm -->
        <dt class="col-sm-3">Mô tả</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

        <!-- Số lượng -->
        <dt class="col-sm-3">Số lượng</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantity)</dd>

        <!-- Kích thước -->
        <dt class="col-sm-3">Kích thước</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Size)</dd>

        <!-- Chiều cao -->
        <dt class="col-sm-3">Chiều cao (cm)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Height)</dd>

        <!-- Trạng thái sản phẩm -->
        <dt class="col-sm-3">Trạng thái</dt>
        <dd class="col-sm-9">
            @if (Model.State?.ToLower() == "true")
            {
                <span class="badge bg-success">Còn hàng</span>
            }
            else
            {
                <span class="badge bg-danger">Hết hàng</span>
            }

        </dd>

        <!-- Giảm giá -->
        <dt class="col-sm-3">Giảm giá (%)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Discount)</dd>

        <!-- Ngày tạo -->
        <dt class="col-sm-3">Ngày tạo</dt>
        <dd class="col-sm-9">@Model.CreatedDate?.ToString("dd/MM/yyyy")</dd>

        <!-- Ngày cập nhật -->
        <dt class="col-sm-3">Ngày cập nhật</dt>
        <dd class="col-sm-9">@Model.UpdatedDate?.ToString("dd/MM/yyyy")</dd>

        <!-- Danh mục -->
        <dt class="col-sm-3">Danh mục</dt>
        <dd class="col-sm-9">@Model.Category?.CategoryName</dd>
    </dl>

    <!-- Form xác nhận xóa -->
    <form asp-action="Delete" onsubmit="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');">
        <input type="hidden" asp-for="ProductId" />
        <div class="mt-4">
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a asp-action="Index" class="btn btn-secondary ms-3">Quay lại danh sách</a>
        </div>
    </form>
</div>
