@model Cay.Canh.Web.HDT.Data.Product

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "_LayoutShop";
}

<h2 class="text-center mt-4">Chỉnh sửa sản phẩm</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" class="bg-light p-4 rounded shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Mã sản phẩm (ẩn) -->
            <input type="hidden" asp-for="ProductId" />

            <!-- Danh mục sản phẩm -->
            <div class="form-group mb-3">
                <label asp-for="CategoryId" class="form-label">Danh mục</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">-- Chọn danh mục --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <!-- Tên sản phẩm -->
            <div class="form-group mb-3">
                <label asp-for="ProductName" class="form-label">Tên sản phẩm</label>
                <input asp-for="ProductName" class="form-control" placeholder="Nhập tên sản phẩm" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <!-- Giá sản phẩm -->
            <div class="form-group mb-3">
                <label asp-for="Price" class="form-label">Giá (VND)</label>
                <input asp-for="Price" class="form-control" placeholder="Nhập giá sản phẩm" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- URL Hình ảnh -->
            <div class="form-group mb-3">
                <label asp-for="ImageUrl" class="form-label">URL hình ảnh</label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Nhập URL hình ảnh" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <!-- Mô tả sản phẩm -->
            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Mô tả</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả sản phẩm"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Số lượng -->
            <div class="form-group mb-3">
                <label asp-for="Quantity" class="form-label">Số lượng</label>
                <input asp-for="Quantity" class="form-control" placeholder="Nhập số lượng" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <!-- Kích thước -->
            <div class="form-group mb-3">
                <label asp-for="Size" class="form-label">Kích thước</label>
                <input asp-for="Size" class="form-control" placeholder="Nhập kích thước" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>

            <!-- Chiều cao -->
            <div class="form-group mb-3">
                <label asp-for="Height" class="form-label">Chiều cao (cm)</label>
                <input asp-for="Height" class="form-control" placeholder="Nhập chiều cao" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>

            <!-- Trạng thái sản phẩm -->
            <div class="form-group mb-3">
                <label asp-for="State" class="form-label">Trạng thái</label>
                <select asp-for="State" class="form-control">
                    <option value="true">Còn hàng</option>
                    <option value="false">Hết hàng</option>
                </select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>

            <!-- Giảm giá -->
            <div class="form-group mb-3">
                <label asp-for="Discount" class="form-label">Giảm giá (%)</label>
                <input asp-for="Discount" class="form-control" placeholder="Nhập phần trăm giảm giá" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>

            <!-- Nút lưu -->
            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                <a asp-action="Index" class="btn btn-secondary ms-3">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
