@model Cay.Canh.Web.HDT.ViewModel.PaginatedList<Cay.Canh.Web.HDT.ViewModel.ProductVM>


@{
    ViewData["Title"] = "Search";
    Layout = "_LayoutShop";
}

<section class="shop-page section-padding-0-100">
    <div class="container">
        <div class="row">
            <!-- Các sản phẩm -->
            <div class="col-12 col-md-8 col-lg-9">
                <div class="shop-products-area">
                    <div class="col-12 pb-1">
                        <h4> Có <b>@Model.Items.Count</b> Sản phẩm </h4>
                    </div>
                    <div class="row">
                        @foreach (var item in Model.Items)
                        {
                            <div class="col-12 col-sm-6 col-lg-4">
                                <div class="single-product-area mb-50">
                                    <div class="product-img">
                                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId">
                                            <img src="@Url.Content("~/img/Products/" + item.ImageUrl + ".png")" alt="@item.ProductName">
                                        </a>
                                    </div>
                                    <a class="h6 text-decoration-none" asp-controller="Products" asp-action="Details" asp-route-id="@item.ProductId">
                                        <center>@item.ProductName</center>
                                    </a>
                                    <div class="product-info">
                                        <div class="d-flex align-items-center justify-content-center mt-2">
                                            <h5>@item.Price.ToString("N0") VND</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <!-- Phân trang -->
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <!-- Nút Previous -->
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })">Trước</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">Trước</span>
                                </li>
                            }

                            <!-- Số Trang -->
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                if (i == Model.CurrentPage)
                                {
                                    <li class="page-item active">
                                        <span class="page-link">@i</span>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                                    </li>
                                }
                            }

                            <!-- Nút Next -->
                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })">Tiếp</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">Tiếp</span>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Shop Area End ##### -->
