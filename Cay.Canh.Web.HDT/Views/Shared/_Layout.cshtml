<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>E Store - eCommerce HTML Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="eCommerce HTML Template Free Download" name="keywords">
    <meta content="eCommerce HTML Template Free Download" name="description">

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400|Source+Code+Pro:700,900&display=swap" rel="stylesheet">

    <!-- CSS Libraries -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="~/lib/slick/slick.css" rel="stylesheet">
    <link href="~/lib/slick/slick-theme.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Top Header Start -->
    @await Html.PartialAsync("_Header")
    <!-- Top Header End -->

    <!-- Nav Bar Start -->
    @await Html.PartialAsync("_Navbar")
    <!-- Nav Bar End -->

    <!-- Main Slider Start -->
    <div class="header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <nav class="navbar bg-light">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Index", asp-controller="Home"><i class="fa fa-home"></i>Trang chủ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Index" , asp-controller="Products"><i class="fa fa-tree"></i>Sản phẩm</a>
                            </li>
                            <!-- Kiểm tra nếu người dùng đã đăng nhập -->
                            @if (User.Identity.IsAuthenticated)
                            {
                                <!-- Nếu là Admin -->
                                @if (User.IsInRole("Admin"))
                                {
                                    <!-- Quản lý -->
                                    <li class="nav-item">
                                        <a class="nav-link"><i class="fa fa-cogs"></i> Quản lý</a>
                                    </li>
                                    <!-- Đăng xuất -->
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Users" asp-action="DangXuat">
                                            <i class="fa fa-sign-out-alt"></i> Đăng xuất
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <!-- Nếu là User thông thường -->
                                    <!-- Thông tin cá nhân -->
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Users" asp-action="Details">
                                            <i class="fa fa-user-circle"></i> Thông tin cá nhân
                                        </a>
                                    </li>
                                    <!-- Giỏ hàng -->
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Carts" asp-action="Index">
                                            <i class="fa fa-shopping-cart"></i> Giỏ hàng
                                        </a>
                                    </li>
                                    <!-- Lịch sử mua hàng -->
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Orders" asp-action="History">
                                            <i class="fa fa-history"></i> Lịch sử mua hàng
                                        </a>
                                    </li>
                                    <!-- Đăng xuất -->
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Users" asp-action="DangXuat">
                                            <i class="fa fa-sign-out-alt"></i> Đăng xuất
                                        </a>
                                    </li>
                                }
                            }
                            else
                            {
                                <!-- Nếu chưa đăng nhập -->
                                <!-- Đăng nhập -->
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Users" asp-action="DangNhap">
                                        <i class="fa fa-sign-in-alt"></i> Đăng nhập
                                    </a>
                                </li>
                                <!-- Đăng ký -->
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Users" asp-action="DangKy">
                                        <i class="fa fa-user-plus"></i> Đăng ký
                                    </a>
                                </li>
                            }

                        </ul>
                    </nav>
                </div>
                <div class="col-md-6">
                    <div class="header-slider normal-slider">
                        <div class="header-slider-item">
                            <img src="img/cay_1.jpg" alt="Slider Image" />
                            <div class="header-slider-caption">
                                <p>Bonsai là "cây con trồng trong chậu") hay còn gọi dân dã là Chậu kiểng hay chậu cây kiểng là loại cây cảnh nhỏ có dáng cổ thụ trồng trong chậu cảnh.</p>
                            </div>
                        </div>
                        <div class="header-slider-item">
                            <img src="img/cay_2.jpg" alt="Slider Image" />
                            <div class="header-slider-caption">
                                <p>Cây cảnh ngoài trời là loại cây được trồng ở khu vực ngoài trời như sân vườn, ban công, sân thượng.</p>
                            </div>
                        </div>
                        <div class="header-slider-item">
                            <img src="img/cay_7.jpg" alt="Slider Image" />
                            <div class="header-slider-caption">
                                <p>Cây cảnh (hoặc cây kiểng) là một số loại thực vật được chăm sóc, gieo trồng và tạo dáng công phu, thường dùng làm vật trang trí hay một chi tiết trong thuật phong thủy.</p>
                            </div>
                        </div>
                        <div class="header-slider-item">
                            <img src="img/cay_7.jpg" alt="Slider Image" />
                            <div class="header-slider-caption">
                                <p>Họ Lan: là một họ thực vật có hoa, thuộc bộ Măng tây, lớp thực vật một lá mầm. Đây là một trong những họ lớn nhất của thực vật, và chúng phân bổ nhiều nơi trên thế giới.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="header-img">
                        <div class="img-item">
                            <img src="img/cay_5.jpg" />
                            <a class="img-text" href="">
                                <p>Một vài hình ảnh về cây</p>
                            </a>
                        </div>
                        <div class="img-item">
                            <img src="img/cay_6.jpg" />
                            <a class="img-text" href="">
                                <p>Một vài hình ảnh về cây</p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Main Slider End -->
    <!-- Feature Start-->
    <div class="feature">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-3 col-md-6 feature-col">
                    <div class="feature-content">
                        <i class="fab fa-cc-mastercard"></i>
                        <h2>Thanh toán an toàn</h2>
                        <p>
                            
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 feature-col">
                    <div class="feature-content">
                        <i class="fa fa-truck"></i>
                        <h2>Giao hàng nhanh chóng</h2>
                        <p>
                            
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 feature-col">
                    <div class="feature-content">
                        <i class="fa fa-sync-alt"></i>
                        <h2>7 ngày trả hàng</h2>
                        <p>
                            
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 feature-col">
                    <div class="feature-content">
                        <i class="fa fa-comments"></i>
                        <h2>Hỗ trợ 24/7</h2>
                        <p>
                            
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Feature End-->
    <!-- Category Start-->
    <!-- Category End-->
    <!-- Call to Action Start -->
    <div class="call-to-action">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1>Hãy gọi cho chúng tôi nếu có bất kỳ thắc mắc nào</h1>
                </div>
                <div class="col-md-6">
                    <a href="">0398 123 123</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Call to Action End -->
    

    @RenderBody()

    <!-- Footer Start -->
    @await Html.PartialAsync("_Footer")
    <!-- Footer End -->
    

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/slick/slick.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
