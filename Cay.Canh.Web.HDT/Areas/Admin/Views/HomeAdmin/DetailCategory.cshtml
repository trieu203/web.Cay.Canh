@model Cay.Canh.Web.HDT.Data.Category
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Chi Tiết Danh Mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 d-flex justify-content-center">
    <div class="card shadow-lg p-4" style="width: 40rem;">
        <h1 class="text-primary text-center">Chi Tiết Danh Mục</h1>
        <h4 class="text-center">Danh Mục</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Tên Danh Mục</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryName)</dd>

            <dt class="col-sm-4">Mô Tả</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-4">Ngày Tạo</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedDate)</dd>

            <dt class="col-sm-4">Ngày Cập Nhật</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.UpdatedDate)</dd>
        </dl>
        <div class="text-center mt-4">
            <a asp-action="EditCategory" asp-route-id="@Model?.CategoryId" class="btn btn-primary me-2">Chỉnh Sửa</a>
            <a asp-action="Category" class="btn btn-secondary">Quay Lại Danh Sách</a>
        </div>
    </div>
</div>

<style>
    dt {
        font-weight: bold;
    }
</style>
