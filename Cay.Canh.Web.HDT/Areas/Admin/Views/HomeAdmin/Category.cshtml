@model IEnumerable<Cay.Canh.Web.HDT.Data.Category>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-primary">Danh Mục Sản Phẩm</h1>

    <div class="mb-3">
        <a class="btn btn-success" asp-area="admin" asp-controller="HomeAdmin" asp-action="CreateCategory">
            <i class="fa fa-plus"></i> Thêm mới
        </a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th class="text-center">Tên danh mục</th>
                <th class="text-center">Ngày tạo</th>
                <th class="text-center">Ngày cập nhật</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="4" class="text-center">Không có dữ liệu để hiển thị</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.UpdatedDate)</td>
                        <td class="text-center">
                            <a class="btn btn-primary btn-sm" asp-action="EditCategory" asp-route-id="@item.CategoryId">
                                <i class="fa fa-edit"></i> Sửa
                            </a>
                            <a class="btn btn-info btn-sm" asp-action="DetailCategory" asp-route-id="@item.CategoryId">
                                <i class="fa fa-info-circle"></i> Chi tiết
                            </a>
                            <a class="btn btn-danger btn-sm" asp-action="DeleteCategory" asp-route-id="@item.CategoryId">
                                <i class="fa fa-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<style>
    .table th, .table td {
        vertical-align: middle;
    }

    .btn {
        margin-right: 5px;
    }
</style>
