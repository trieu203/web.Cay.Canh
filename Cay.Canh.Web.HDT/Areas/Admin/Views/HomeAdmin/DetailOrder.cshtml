@model Cay.Canh.Web.HDT.Data.Order
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-primary my-4">Chi tiết đơn hàng</h1>

<div class="card shadow-sm p-4">
    <h4 class="text-secondary">Thông tin đơn hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Ngày đặt hàng
        </dt>
        <dd class="col-sm-9">
            @Model?.OrderDate?.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-3">
            Tổng tiền
        </dt>
        <dd class="col-sm-9">
            @Model?.TotalAmount.ToString("N0") VNĐ
        </dd>
        <dt class="col-sm-3">
            Trạng thái
        </dt>
        <dd class="col-sm-9">
            @(Model?.OrderStatus == "Pending" ? "Đang xử lý" : Model?.OrderStatus == "Completed" ? "Hoàn thành" : Model?.OrderStatus == "Cancelled" ? "Đã hủy" : Model?.OrderStatus)
        </dd>
        <dt class="col-sm-3">
            Địa chỉ giao hàng
        </dt>
        <dd class="col-sm-9">
            @Model?.ShippingAddress
        </dd>
        <dt class="col-sm-3">
            Email
        </dt>
        <dd class="col-sm-9">
            @Model?.Email
        </dd>
        <dt class="col-sm-3">
            Số điện thoại
        </dt>
        <dd class="col-sm-9">
            @Model?.PhoneNumber
        </dd>
        <dt class="col-sm-3">
            Người dùng
        </dt>
        <dd class="col-sm-9">
            @Model?.User?.UserId
        </dd>
    </dl>
</div>

<div class="mt-4 text-center">
    <a asp-action="EditOrder" asp-route-id="@Model?.OrderId" class="btn btn-warning">Sửa đơn hàng</a>
    <a asp-action="Order" class="btn btn-secondary">Quay lại danh sách</a>
</div>
