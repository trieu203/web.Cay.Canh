@model WebCayCanh.HDT.Data.PhanLoaiSp

@{
    ViewData["Title"] = "Chi tiết phân loại sản phẩm";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Chi tiết phân loại sản phẩm</h2>
    <hr />

    <!-- Hiển thị thông tin chi tiết -->
    <dl class="row">
        <!-- Tên Phân Loại -->
        <dt class="col-sm-3 fw-bold">Tên Phân Loại:</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TenPhanLoai)
        </dd>

        <!-- Mô Tả -->
        <dt class="col-sm-3 fw-bold">Mô Tả:</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MoTaPl)
        </dd>
    </dl>

    <hr />

    <!-- Các nút hành động -->
    <div class="d-flex justify-content-center mt-4">
        <a class="btn btn-warning me-3" asp-action="Edit" asp-route-id="@Model?.MaPhanLoai">
            <i class="fa fa-edit"></i> Chỉnh Sửa
        </a>
        <a class="btn btn-secondary" asp-action="Index">
            <i class="fa fa-arrow-left"></i> Quay Lại Danh Sách
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
