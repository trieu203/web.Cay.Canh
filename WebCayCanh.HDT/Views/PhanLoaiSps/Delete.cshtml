@model WebCayCanh.HDT.Data.PhanLoaiSp

@{
    ViewData["Title"] = "Xóa phân loại sản phẩm";
}

<div class="container mt-5">
    <h2 class="text-center text-danger mb-4">Xóa Phân Loại Sản Phẩm</h2>
    <hr />

    <h4 class="text-center mb-4">Bạn có chắc chắn muốn xóa mục này?</h4>

    <!-- Hiển thị thông tin chi tiết -->
    <dl class="row justify-content-center">
        <!-- Tên Phân Loại -->
        <dt class="col-sm-3 fw-bold">Tên Phân Loại:</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TenPhanLoai)
        </dd>

        <!-- Mô Tả -->
        <dt class="col-sm-3 fw-bold">Mô Tả:</dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MoTaPl)
        </dd>
    </dl>

    <hr />

    <!-- Form xóa -->
    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="MaPhanLoai" />

        <div class="d-flex justify-content-center gap-3">
            <button type="submit" class="btn btn-danger">
                <i class="fa fa-trash"></i> Xác Nhận Xóa
            </button>
            <a class="btn btn-secondary" asp-action="Index">
                <i class="fa fa-arrow-left"></i> Quay Lại Danh Sách
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
