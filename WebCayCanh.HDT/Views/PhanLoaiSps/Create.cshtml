@model WebCayCanh.HDT.Data.PhanLoaiSp

@{
    ViewData["Title"] = "Thêm mới phân loại sản phẩm";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Thêm mới danh mục sản phẩm</h2>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Form tạo mới -->
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Tên Phân Loại -->
                <div class="mb-3">
                    <label asp-for="TenPhanLoai" class="form-label">Tên Phân Loại</label>
                    <input asp-for="TenPhanLoai" class="form-control" placeholder="Nhập tên phân loại" />
                    <span asp-validation-for="TenPhanLoai" class="text-danger"></span>
                </div>

                <!-- Mô Tả -->
                <div class="mb-3">
                    <label asp-for="MoTaPl" class="form-label">Mô Tả</label>
                    <textarea asp-for="MoTaPl" class="form-control" rows="4" placeholder="Nhập mô tả"></textarea>
                    <span asp-validation-for="MoTaPl" class="text-danger"></span>
                </div>

                <!-- Nút Lưu -->
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-save"></i> Thêm Mới
                    </button>
                    <a class="btn btn-secondary" asp-action="Index">
                        <i class="fa fa-arrow-left"></i> Quay Lại Danh Sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
