@model IEnumerable<WebCayCanh.HDT.Data.PhanLoaiSp>

@{
    ViewData["Title"] = "Quản lý danh mục sản phẩm";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Quản lý Danh Mục sản phẩm</h2>

    <div class="text-end mb-3">
        <a class="btn btn-primary" asp-action="Create">
            <i class="fa fa-plus-circle"></i> Thêm Mới
        </a>
    </div>

    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark text-center">
            <tr>
                <th>Tên Phân Loại</th>
                <th>Mô Tả</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">Không có dữ liệu để hiển thị</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TenPhanLoai)</td>
                        <td>@Html.DisplayFor(modelItem => item.MoTaPl)</td>
                        <td class="text-center">
                            <a class="btn btn-warning btn-sm me-2" asp-action="Edit" asp-route-id="@item.MaPhanLoai">
                                <i class="fa fa-edit"></i> Sửa
                            </a>
                            <a class="btn btn-info btn-sm me-2" asp-action="Details" asp-route-id="@item.MaPhanLoai">
                                <i class="fa fa-eye"></i> Xem
                            </a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.MaPhanLoai"
                               onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này?');">
                                <i class="fa fa-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
